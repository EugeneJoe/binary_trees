#include "binary_trees.h"

/**
 * bst_insert - insert a value in a Binary Search Tree
 * @tree: double pointer to the root node of the BST to insert the value in
 * @value: value to store in the node to be inserted
 *
 * Return: a pointer to the created node, or NULL on failure
 */
bst_t *bst_insert(bst_t **tree, int value)
{
	bst_t *prev = NULL, *curr = NULL, *new = NULL;

	if (tree)
	{
		if (*tree == NULL)
		{
			*tree = (bst_t *)binary_tree_node(NULL, value);
			return (*tree);
		}
		curr = *tree;
		while (curr != NULL)
		{
			prev = curr;
			if (value < curr->n)
				curr = curr->left;
			if (value > curr->n)
				curr = curr->right;
			if (value == curr->n)
				return (NULL);
		}
		new = binary_tree_node(prev, value);

		if (value < prev->n)
		{
			prev->left = new;
			return (prev->left);
		}
		else
		{
			prev->right = new;
			return (prev->right);
		}
	}
	return (NULL);
}
